	<% Article.where('user_id = ?', @user.id).each do |article| %>
	<div class="publication-box">
		<div class="user">
			<%= link_to image_tag(article.user.avatar_url().to_s, title: article.user.username), user_path(article.user) %>
		</div>

		<div class="title-block">
			
			<div class="title">
				<%= link_to article.title, article %>
			</div>

			<div class="created-at">
				<%= article.created_at %>
			</div>

		</div>


		<div class="quote-content">
			<%= truncate(article.content, length: 250) %> <%= link_to "Continuer Ã  lire", article %>
		</div>

		<div class="cover">
			<%= link_to image_tag(article.photo_url().to_s), article %>
		</div>

		<div class="toolbox">
			<% if Credit.where("user_id = ? and article_id = ?", current_user.id, article.id).count < 100 %>
			<div class="thumbup">
				<%= form_for(Credit.new, :remote => true) do |f| %>
  					<%= f.hidden_field :user_id, value: current_user.id %>
  					<%= f.hidden_field :article_id, value: article.id %>
  					<%= f.hidden_field :verdict, value: true %>
  					<button type="submit" type="button" class="btn btn-default btn-lg">
            			<span class="glyphicon glyphicon-thumbs-up"></span> Je Confirme
            		</button>
  				<% end %>
			</div>

			<div class="thumbdown">
				<%= form_for(Credit.new, :remote => true) do |f| %>
  					<%= f.hidden_field :user_id, value: current_user.id %>
  					<%= f.hidden_field :article_id, value: article.id %>
  					<%= f.hidden_field :verdict, value: false %>
  					<button type="submit" type="button" class="btn btn-default btn-lg">
            			<span class="glyphicon glyphicon-thumbs-down"></span> Pas Vrai
            		</button>
  				<% end %>
			</div>
			<% end %>



			<div class="addtomyjournal">
				
			</div>

			<div class="share">
				
			</div>
		</div>

		<div class="facebook-comments">
			<div class="fb-comments" data-href="http://0.0.0.0:3000/articles/<%= article.id %>" data-width="680"></div>
		</div>

		
	</div>
		
	</br>
	<% end %>