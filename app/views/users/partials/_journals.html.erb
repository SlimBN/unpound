<div class="journals-box">
	<div class="label">
		Journaux edit√©s <span><%= Journal.where('user_id = ?', @user.id).count %></span>
	</div>

	<% Journal.where('user_id = ?', @user.id).last(1).each do |journal| %>

		<div class="journal journal-<%= journal.id %>">
			
			<div class="titre">
				<%= Journal.find(journal).name %>
			</div>

			<div class="content">
				<%= truncate(Journal.find(journal).description, length: 140) %>
			</div>

		</div>

	<% end %>


</div>