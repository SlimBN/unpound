    
      <div class="left">
        <div class="overlay">
            
        </div>

        <div class="logo">
          <%= link_to (image_tag "newspaper.png"), root_path() %>
        </div>

        <% if user_signed_in? %>
          
          <div class="userbox">

            <div class="avatar">
              <%= image_tag current_user.avatar_url.to_s %>
            </div>

            <div class="name">
              <%= link_to current_user.username, user_path(current_user.id) %>
            </div>

            <hr>

            <div class="aboutme">
              <%= current_user.about %>
            </div>

          </div>

          <div class="user-buttons">
            <a href="<%= new_article_path() %>" class="new-article"><span class="icon-doc-add"></span> Nouvel Article</a> ou <a href="" class="new-folder">Nouveau Dossier</a>
          </div>

          
            <script>
              $(".left").backstretch("<%= current_user.background_url().to_s %>");
            </script>

        <% end %>

      </div>