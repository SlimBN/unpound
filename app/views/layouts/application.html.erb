<!DOCTYPE html>
<html>
<head>
  <title>Dowritit &bull; The Social Journal</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
<link href="http://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic" rel="stylesheet" type="text/css">

  
</head>
<body>


<div id="fb-root"></div>
<script>(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.net/fr_FR/all.js#xfbml=1&appId=153439174806312";
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>

<% if user_signed_in? %>
<div id="toolbar">
	<%= link_to (image_tag "icons/star.png"), favorites_path() %>
	<% link_to (image_tag "icons/write.png"), "" %>
	<a href="<%= new_article_path() %>"><%= image_tag "icons/plume.png" %></a>
	<a href="<%= edit_user_path(current_user) %>"> <%= image_tag "icons/gears.png" %></a>
	<a href="<%= logout_path() %>"> <%= image_tag "icons/door.png" %></a>
</div>
<% end %>

<%= yield %>

<script type="text/javascript" data-pin-hover="true" src="//assets.pinterest.com/js/pinit.js"></script>

  <script>var editor = new MediumEditor('.about');</script>
