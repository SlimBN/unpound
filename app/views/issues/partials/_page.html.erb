	<ul>		
		
	
	
		<% Page.where("issue_id = ?", @issue.id).order("classement").each do |page| %>


			
			<li>
				<%= link_to page.name, page %>

				<%= form_for(Page.find(page.id), :remote => true) do |f| %>
					<%= f.text_field :classement, value: page.classement %>
					<%= f.submit %>
				<% end %>



			</li>


		<% end %>

		
	</ul>