
<% if user_signed_in? %>
<div id="toolbar">
  <% link_to (image_tag "icons/star.png"), "" %>
  <% link_to (image_tag "icons/write.png"), "" %>
  <a href="<%= new_article_path() %>"><%= image_tag "icons/plume.png" %></a>
  <a href="<%= edit_user_path(current_user) %>"> <%= image_tag "icons/gears.png" %></a>
  <a href="<%= logout_path() %>"> <%= image_tag "icons/door.png" %></a>
</div>
<% end %>


<div id="plateforme_home">
  <%= link_to (image_tag 'newspaper.png'), homes_path() %>
</div>

<div id="article-show">

    <div class="title">
      <%= @article.title %>
    </div>

    <div class="article">
      
      <!-- SOCIAL SHARING MODULE -->
        <% render "articles/showmodules/share" %>
      <!-- SOCIAL SHARING MODULE END -->

      
      <!-- SOCIAL INTERACTING MODULE -->
        <%= render "articles/showmodules/interact" %>
      <!-- SOCIAL INTERACTING MODULE END -->

      <% unless @article.photo.nil? %>
      <div class="photo">
        <%= image_tag @article.photo_url().to_s %>
      </div>
      <% end %>


      <div class="content">
        <%= raw(@article.content) %>
      </div>


      <!-- SOCIAL SHARING MODULE -->
        <%= render "articles/showmodules/share" %>
      <!-- SOCIAL SHARING MODULE END -->


      <!-- FB COMMENTS MODULE -->
        <%= render "articles/showmodules/fb_comments" %>
      <!-- FB COMMENTS MODULE END -->



    </div>

    <div class="sidebar">

      <!-- AUTHOR MODULE -->
        <%= render "articles/showmodules/author" %>
      <!-- AUTHOR MODULE END -->

    </div>

</div>

