  <div class="author">

    <div class="avatar">
      <%= link_to (image_tag @article.user.avatar_url().to_s), @article.user %>
    </div>

    <div class="name">
      <%= link_to @article.user.username, user_path(@article.user) %>
    </div>

    <div class="follow">
      <% if Follow.where('user_id = ? and followee_id = ?', current_user.id, @article.user.id).count < 1 %>
  
        <div class="follow">
          <%= link_to "s'abonner", article_user_follow_path(@article.user.id), remote: true %>
        </div>

      <% else %>

        <div class="unfollow">
          <%= link_to "se desabonner", article_user_unfollow_path(@article.user.id), remote: true %>
        </div>

      <% end %>
      
    </div>

    <div class="about-user">
      <%= @article.user.about %>
    </div>

    <div class="published">
      Publi√© le
    </div>

    <div class="date">
      <%= @article.created_at.strftime("%d, %B %Y") %>
    </div>

  </div>