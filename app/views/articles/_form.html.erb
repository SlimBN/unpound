      <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="title">
    <%= f.text_field :title, placeholder: "Tapez votre title" %>
  </div>

  <div class="content">
    <%= f.text_area :content, placeholder: "Tapez votre article" %>
  </div>

    <%= f.hidden_field :lang_id %>
    <%= f.hidden_field :user_id, value: current_user.id %>

  <div class="cover">
    <%= f.label :photo %><br />
    <%= f.file_field :photo %>
  </div>

  <div class="actions">
    <input name="commit" type="submit" value="Publier" />
    <input name="commit" type="reset" value="Remettre à zéro" />
  </div>



<% end %>
