<div id="new-article">
	
  <%= render "users/widgets/profile_lefty" %>


	<div class="form-container">


	<a onClick='$("#article_photo").trigger("click");'><%= image_tag "icons/add_picture.png" %></a>

		<%= form_for(@article) do |f| %>
		  <% if @article.errors.any? %>
		    <div id="error_explanation">
		      <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>

		      <ul>
		      <% @article.errors.full_messages.each do |msg| %>
		        <li><%= msg %></li>
		      <% end %>
		      </ul>
		    </div>
		  <% end %>

		  <div class="title">
		    <%= f.text_field :title, placeholder: t('tap_your_title') %>
		  </div>

		  <div class="content">
		    <%= f.hidden_field :content %>
		  </div>

		    <%= f.hidden_field :lang_id %>
		    <%= f.hidden_field :user_id, value: current_user.id %>

		    <%= f.file_field :photo %>


        <div class="new-content" data-placeholder="<%= t 'here_goes_the_magic' %>" id="textarea" onkeyUp="document.getElementById('article_content').value = document.getElementById('textarea').innerHTML;" onmouseUp="document.getElementById('article_content').value = document.getElementById('textarea').innerHTML;"></div>
		
		
		<div class="actions">
		    <input name="commit" type="submit" value="<%= t 'publish' %>" />
		    <input name="commit" type="reset" value="<%= t 'reset' %>" />
		</div>


    <% end %>

      <script>var editor = new MediumEditor('.new-content', {firstHeader: ''}
      );</script>


	</div>


</div>
