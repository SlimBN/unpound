<%= Visit.count.to_s %>


<h1>Listing visits</h1>

<table>
  <tr>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% Visit.order("created_at DESC").each do |visit| %>
  <tr>
    <td><%= visit.what %></td>
    <td><%= visit.ip_address %></td>
    <td><%= visit.created_at %></td>
    <td><%= link_to 'Destroy', visit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

