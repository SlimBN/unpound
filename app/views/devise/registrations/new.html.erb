  <div id="home-logged-of">
      <div class="left">
        <div class="overlay">
            
        </div>

        <div class="logo">
          <%= link_to (image_tag "newspaper.png"), homes_path() %>
        </div>

        <% if user_signed_in? %>
          
          <div class="userbox">

            <% if current_user.avatar.present? %>
            <div class="avatar">
              <%= image_tag current_user.avatar_url.to_s %>
            </div>
            <% end %>

            <div class="name">
              <%= link_to current_user.username, user_path(current_user) %>
            </div>

            <hr>

            <div class="aboutme">
              <%= raw(current_user.about) %>
            </div>

          </div>

          <div class="user-buttons">
            <a href="<%= new_article_path() %>" class="new-article"><span class="icon-doc-add"></span> <%= t "homes.new_article" %></a> <%= t "or" %> <a href="" class="new-folder"><%= t "new_folder" %></a>
          </div>

          
            <script>
              $(".left").backstretch("http://dl.dropbox.com/u/515046/www/garfield-interior.jpg");
            </script>


        <% else %>

          <div class="description">
            <div class="title">
              DoWritit
            </div>

            <div class="motto">
             <%= t "motto" %> <span class="icon-emo-coffee"></span> &nbsp; ... 
              <a href=""><%= t "whats_about" %>?</a>
            </div>

            <hr>

            <div class="register-connect">
              <a href="" class="facebook"><span class="icon-facebook-circled"></span> Facebook</a>
              <a href="" class="twitter"><span class="icon-twitter-circled"></span> Twitter</a></br></br>
              <a href="<%= login_path() %>" class="formulaire"><%= t "sign_in" %></a> <%= t "or" %> <a href="<%= register_path() %>" class="formulaire"><%= t "register" %></a> <%= t "old_way" %>
            </div>
          </div>
          
            <script>
              $(".left").backstretch("http://dl.dropbox.com/u/515046/www/garfield-interior.jpg");
            </script>
        <% end %>

      </div>

    <div class="catalogue register" style='padding-top: 20px;'>
      
      <div class="header">
        <%= t "register" %>
      </div>

      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="label"><%= t "username" %></div>
        <div class="input"><%= f.text_field :username, :autofocus => true %></div>

        <div class="label"><%= t "valide_email" %></div>
        <div class="input"><%= f.email_field :email, :autofocus => true %></div>

        <div class="label"><%= t "password" %></div>
        <div class="input"><%= f.password_field :password %></div>

        <div class="label"><%= t "password_confirmation" %></div>
        <div class="input"><%= f.password_field :password_confirmation %></div>

        <div class="avatar">
          <a onClick='$("#user_avatar").trigger("click");'><%= image_tag "icons/avatar.png" %></a>
          <%= f.file_field :avatar %>
          <div class="legend">
            <%= t "avatar" %>
          </div>
          
        </div>

        <div class="background">
          <a onClick='$("#user_background").trigger("click");'><%= image_tag "icons/add_picture.png" %></a>
          <%= f.file_field :background %>
          <div class="legend">
            <%= t "user_background" %>
          </div>
          
        </div>

        <%= f.hidden_field :about %>


        <div class="about" data-placeholder="<%= t 'little_about' %>..." id="textarea" onkeyUp="document.getElementById('user_about').value = document.getElementById('textarea').innerHTML;"></div>

      <div class="actions">
        <input name="commit" type="submit" value="<%= t 'register' %>" />
        <input name="commit" type="reset" value="<%= t 'connect' %>" />
      </div>
      
      <% end %> 


    </div>
  </div>






