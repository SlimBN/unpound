

<div id="signin-box">
	
	<div><%= t "sign_in" %></div>


	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
		<div class="signin-form-box">

			<div class="block">			
				<div class="label">
					<%= t "your_email" %>
				</div>

				<div class="form">
					<%= f.email_field :email, :autofocus => true %>
				</div>
				
			</div>

			<div class="block">
				<div class="label">
					<%= t "your_password" %>
				</div>

				<div class="form">
					<%= f.password_field :password %>
				</div>	

			</div>

			<div class="action-box">
				<input name="commit" type="submit" value="<%= t 'connect' %>" />
			</div>
		</div>
	<% end %>
</div>

